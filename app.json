{
  "expo": {
    "name": "L-EDGER",
    "slug": "l-edger",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "ledgerapp",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "extra": {
      "eas": {
        "projectId": "YOUR_PROJECT_ID" 
      }
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.ledgerapp.mobile",
      "versionCode": 1,
      "permissions": []
    },
    "web": {
      "favicon": "./assets/logo.png"
    },
    "plugins": ["expo-env"]
  }
}
